	<meta content="" name="author" />

	<!-- BEGIN GLOBAL MANDATORY STYLES -->

	<link href="${formLink}/admin/media/css/bootstrap.min.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/bootstrap-responsive.min.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/font-awesome.min.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/style-metro.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/style.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/style-responsive.css" rel="stylesheet" type="text/css"/>

	<link href="${formLink}/admin/media/css/default.css" rel="stylesheet" type="text/css" id="style_color"/>

	<link href="${formLink}/admin/media/css/uniform.default.css" rel="stylesheet" type="text/css"/>

	<!-- END GLOBAL MANDATORY STYLES -->

