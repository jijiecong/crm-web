	<script src="${formLink}/admin/media/js/jquery.blockui.min.js" type="text/javascript"></script>  

	<script src="${formLink}/admin/media/js/jquery.cookie.min.js" type="text/javascript"></script>

	<script src="${formLink}/admin/media/js/jquery.uniform.min.js" type="text/javascript" ></script>

	<!-- END CORE PLUGINS -->

	<!-- BEGIN PAGE LEVEL PLUGINS -->

	<script src="${formLink}/admin/media/js/jquery.validate.min.js" type="text/javascript"></script>

	<!-- END PAGE LEVEL PLUGINS -->

	<!-- BEGIN PAGE LEVEL SCRIPTS -->

	<script src="${formLink}/admin/media/js/app.js" type="text/javascript"></script>

	<script src="${formLink}/admin/media/js/login.js" type="text/javascript"></script>      

	<!-- END PAGE LEVEL SCRIPTS --> 

	<script>

		jQuery(document).ready(function() {     

		  App.init();

		  Login.init();

		});

