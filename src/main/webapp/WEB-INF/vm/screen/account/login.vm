</head>
<body class="login">
	<!-- BEGIN LOGO -->
	<div class="logo">
		<img src="${formLink}/admin/media/image/logo-icon.png" alt="" /> 
	</div>

	<!-- END LOGO -->

	<!-- BEGIN LOGIN -->

	<div class="content">

		<!-- BEGIN LOGIN FORM -->

		<form   action="/account/login" method="post">

			<h3 class="form-title">用户登陆</h3>

			<div class="alert alert-error hide">

				<button class="close" data-dismiss="alert"></button>

				<span>请输入手机号和密码.</span>

			</div>

			<div class="control-group">

				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->

				<label class="control-label visible-ie8 visible-ie9">Username</label>

				<div class="controls">

					<div> 
						<input class="m-wrap placeholder-no-fix" type="text" placeholder="手机号" name="mobile"  value="$!mobile"/>
					</div>

				</div>

			</div>

			<div class="control-group">

				<label class="control-label visible-ie8 visible-ie9">Password</label>

				<div class="controls">

					<div > 
						<input class="m-wrap placeholder-no-fix" type="password" placeholder="登陆密码" name="password" value="$!password"/>

					</div>

				</div>

			</div>

			<div class="form-actions">

				<label class="checkbox"> 
				</label>

				<button type="submit" class="btn green pull-right">

				       登陆 <i class="m-icon-swapright m-icon-white"></i>

				</button>            
				
			</div>
			#if($!{validateMap.code}!=0)
			<span style="color: red;">$!{validateMap.message}  $!{validateMap.code}</span> 
			#end
			<div class="create-account">

				<p>  
					<a href="javascript:;" id="register-btn" class="">创建帐号</a>
				</p>

			</div>

		</form>

		<!-- END LOGIN FORM -->        

		 
		<!-- BEGIN REGISTRATION FORM -->

		<form class="form-vertical register-form" action="/account/register" method="post">

			<h3 class="">注册</h3> 

			<div class="control-group">

				<label class="control-label visible-ie8 visible-ie9">Username</label>

				<div class="controls">

					<div> 
						<input class="m-wrap placeholder-no-fix" type="text" placeholder="用户名" name="userName"/>
					</div>

				</div>

			</div>

			<div class="control-group">

				<label class="control-label visible-ie8 visible-ie9">Password</label>

				<div class="controls">

					<div class="input-icon right"> 
						<input class="m-wrap placeholder-no-fix" type="password" id="register_password" placeholder="密码" name="password"/>
					</div>

				</div>

			</div>

			<div class="control-group">

				<label class="control-label visible-ie8 visible-ie9">Re-type Your Password</label>

				<div class="controls">
					<div> 
						<input class="m-wrap placeholder-no-fix" type="password" placeholder="密码确认" name="rpassword"/>
					</div>
				</div>

			</div> 
			<div class="control-group">
				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
				<label class="control-label visible-ie8 visible-ie9">Sex</label>
				<div class="controls">
					<div> 
 						 性别：
						<input class="m-wrap placeholder-no-fix" type="radio" value="男" placeholder="" name="sex"/>男
						<input class="m-wrap placeholder-no-fix" type="radio" value="女" placeholder="" name="sex"/>女
					</div>
				</div>
			</div>
			<div class="control-group">

				<!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->

				<label class="control-label visible-ie8 visible-ie9">Mobile</label>

				<div class="controls">

					<div> 
						<input class="m-wrap placeholder-no-fix" type="text"  placeholder="手机号码" name="mobile"/>
					</div>

				</div>

			</div>

			 
			<div class="form-actions">

				<button id="register-back-btn" type="button" class="btn">

				<i class="m-icon-swapleft"></i>  返回

				</button>

				<button type="submit" id="register-submit-btn" class="btn green pull-right">

				注册 <i class="m-icon-swapright m-icon-white"></i>

				</button>            
			</div>

		</form>

		<!-- END REGISTRATION FORM -->

	</div>

	<!-- END LOGIN -->

	<!-- BEGIN COPYRIGHT -->

	<div class="copyright">

		2016 &copy; 美人信息技术有限公司

	</div>

	<!-- END COPYRIGHT -->

