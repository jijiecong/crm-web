<script>
    seajs.use("$formLink/admin/static/app/mission/missionTrace", function (main) {
        main.init();
    });
    $(document).ready(function () {//解析emoji表情shortname-->image
        $(".emoji").each(function () {
            var shortName=$(this).html();

            var emoji=emojione.shortnameToImage(shortName);
            $(this).html(emoji);
        })
    })
    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFormStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/missionTrace/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;
                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
</script>


