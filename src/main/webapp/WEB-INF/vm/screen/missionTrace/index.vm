<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">任务奖励流水管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/missionTrace/index" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">奖励流水编号：</span>
                    <input type="text" class="m-wrap small" name="missionInstanceTraceIdSearch" id="missionInstanceTraceIdSearch" value="$!missionInstanceTraceIdSearch">
                    <span class="help-inline">任务编号：</span>
                    <input type="text" class="m-wrap small" name="missionIdSearch" id="missionIdSearch" value="$!missionIdSearch">
                    <span class="help-inline">用户Id：</span>
                    <input type="text" class="m-wrap small" name="userIdSearch" id="userIdSearch" value="$!userIdSearch">
                    <span class="help-inline">处理状态：</span>
                    <select id="textarea_process"   data-width="auto">
                    </select>
                    <input type="text" class="m-wrap small" name="searchStatus" id="searchStatus" value="$!searchStatus"  style="display: none" >
                    <button type="submit" class="btn  search-btn">搜 索</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    任务奖励流水列表
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>奖励流水编号</th>
                        <th>任务流水编号</th>
                        <th>任务编号</th>
                        <th>任务名称</th>
                        <th>用户Id</th>
                        <th>用户名</th>
                        <th>奖励类型</th>
                        <th>发放时间</th>
                        <th>流水状态</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.missionInstanceTraceId">
                            <td>$!basicVO.missionInstanceTraceId</td>
                            <td>$!basicVO.missionInstanceId</td>
                            <td>$!basicVO.missionId</td>
                            <td>$!basicVO.missionName</td>
                            <td>$!basicVO.receiverId</td>
                            <td class="emoji">$!basicVO.receiverName</td>
                            <td>
                            #if ($!basicVO.awardType=="SPONSORAWARD")
                                发起者奖励
                            #elseif($!basicVO.awardType=="PARTICIPATORAWARD")
                                参与者奖励
                            #elseif($!basicVO.awardType=="SHAREAWARD")
                                邀请人奖励
                            #end
                            </td>
                            <td style="text-align: left">$dateUtils.format($!basicVO.finishTime,"yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                #if ($!basicVO.status=="RUNNING")
                                    进行中
                                #elseif($!basicVO.status=="FAILED")
                                    失败
                                #elseif($!basicVO.status=="SUCCESS")
                                    成功
                                #end

                            </td>
                            <td>
                            #if ($basicVO.status=="FAILED")
                                <div class="btn-group">
                                    <a class="btn mini purple detailForm"  href="#modal-form-trace-detail" data-toggle="modal" data-uid="$!basicVO.missionInstanceTraceId" style="margin-left: 3px;">
                                        <i class="icon-cog"></i> 详情 <i class="icon-angle-down"></i>
                                    </a>
                                </div>
                                <div class="btn-group">
                                    <a class="btn mini purple auditForm" href="#modal-form-box-aduit" data-toggle="modal" data-uid="$!basicVO.missionInstanceTraceId" style="margin-left: 3px;">
                                        <i class="icon-cog"></i> 审核 <i class="icon-angle-down"></i>
                                    </a>
                                </div>
                            #else
                                <div class="btn-group">
                                    <a class="btn mini purple detailForm"  href="#modal-form-trace-detail" data-toggle="modal" data-uid="$!basicVO.missionInstanceTraceId" style="margin-left: 3px;">
                                        <i class="icon-cog"></i> 详情 <i class="icon-angle-down"></i>
                                    </a>
                                </div>
                            #end
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/missionTrace/index').addQueryData("missionIdSearch","$!missionIdSearch").addQueryData("userIdSearch","$!userIdSearch").addQueryData("searchStatus","$!searchStatus").addQueryData('missionInstanceTraceIdSearch',  "$!missionInstanceTraceIdSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
