                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>模板ID</th>
                        <th>模板名称</th>
                        <th>创建时间</th>
                        <th>状态</th>
                        <th>编辑者</th>
                        <th>备注</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.id">
                            <td>$!basicVO.id</td>
                            <td>$!basicVO.templateName</td>
                            <td>$dateUtils.format($!basicVO.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                            #if("$!basicVO.isValid"=="true")
                                    启用
                                #else
                                    禁用
                                #end
                            </td>
                            <td>$!basicVO.userName</td>
                            <td>$!basicVO.description</td>
                            <td>
                                <div class="btn-group">
                                    <a  href="#modal-form-template" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                        <i class="icon-edit"></i> 修改</a>
                            #if("$!basicVO.isValid"=="true")
                                <a  data-toggle="modal" id="disableTemplateId" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                    <i class="icon-edit"></i> 禁用</a>
                            #else
                                <a  data-toggle="modal" id="enableTemplateId" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                    <i class="icon-edit"></i> 启用</a>
                            #end
                                    <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini red del" style="margin-left: 3px;">
                                        <i class="icon-trash"></i> 删除
                                    </a>
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/template/templateIndex').addQueryData("templateNameSearch","$!templateNameSearch").addQueryData("templateIdSearch","$!templateIdSearch").addQueryData('createTimeBeginSearch',  "$!createTimeBeginSearch").addQueryData('createTimeEndSearch',  "$!createTimeEndSearch").fork())
