<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">任务管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/mission/index" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">任务名：</span>
                    <input type="text" class="m-wrap small" name="missionNameSearch" id="missionNameSearch" value="$!missionNameSearch">
                    <span class="help-inline">任务状态：</span>
                    <select id="textarea_state"   data-width="auto">
                    </select>
                    <input type="text" class="m-wrap small" name="searchState" id="searchState" value="$!searchState"  style="display: none" >
                    <button type="submit" class="btn  search-btn">搜 索</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    任务列表
                </div>
                <div class="actions">
                    <a  data-toggle="modal" class="btn blue add addForm"><i class="icon-pencil"></i>添加</a>
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>编号</th>
                        <th>创建人</th>
                        <th>任务名称</th>
                        <th>开始时间</th>
                        <th>结束时间</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.id">
                            <td>$!basicVO.id</td>
                            <td>$!basicVO.userName</td>
                            <td>$!basicVO.missionName</td>
                            <td>$dateUtils.format($!basicVO.beginTime,"yyyy-MM-dd HH:mm:ss")</td>
                            <td>$dateUtils.format($!basicVO.endTime,"yyyy-MM-dd HH:mm:ss")</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn mini purple setForm" href="#" data-toggle="dropdown" data-uid="$!basicVO.id">
                                        <i class="icon-cog"></i> 详情 <i class="icon-angle-down"></i>
                                    </a>
                                    <a href="#missionDelete" data-toggle="modal" data-uid="$!basicVO.id"
                                       class="btn mini red del" style="margin-left: 3px;">
                                        <i class="icon-trash"></i> 删除
                                    </a>
                                    
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/mission/index').addQueryData('searchState',  "$!searchState").addQueryData('missionNameSearch',  "$!missionNameSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
    </div>


    <div id="missionDelete" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel3"
         aria-hidden="true" data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
