<input type="hidden" id="selectedBasicRegion"/>

<script>
    seajs.use("$formLink/admin/static/app/mission/mission", function (main) {
        main.init();
    });

    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFormStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/mission/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;
                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
</script>


