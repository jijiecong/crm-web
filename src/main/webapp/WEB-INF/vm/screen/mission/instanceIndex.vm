<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">任务实例管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/mission/instance/index" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">任务名：</span>
                    <input type="text" class="m-wrap small" name="missionNameSearch" id="missionNameSearch" value="$!missionNameSearch">
                    <span class="help-inline">通道列表：</span>
                    <input type="text" class="m-wrap small" name="channelIdsSearch" id="channelIdsSearch" value="$!channelIdsSearch">
                    <button type="submit" class="btn  search-btn">搜 索</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    任务列表
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>实例编号</th>
                        <th>任务编号</th>
                        <th>任务名称</th>
                        <th>任务状态</th>
                        <th>任务类型</th>
                        <th>任务身份</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.missionInstanceId">
                            <td>$!basicVO.missionInstanceId</td>
                            <td>$!basicVO.missionId</td>
                            <td>$!basicVO.missionName</td>
                            <td>$!basicVO.status</td>
                            <td>$!basicVO.missionType</td>
                            <td>$!basicVO.identityType</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn mini purple setForm" href="#" data-toggle="dropdown" data-uid="$!basicVO.missionInstanceId">
                                        <i class="icon-cog"></i> 详情 <i class="icon-angle-down"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/mission/instance/index').addQueryData('channelIdsSearch',  "$!channelIdsSearch").addQueryData('missionNameSearch',  "$!missionNameSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>

<script>
    seajs.use("$formLink/admin/static/app/mission/missionInstance", function (main) {
        main.init();
    });

    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFormStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/mission/instance/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;
                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
</script>


