<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">任务条件配置</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/param/index" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">参数类型：</span>
                    <input type="text" class="m-wrap small" name="paramTypeSearch" id="paramTypeSearch" value="$!paramTypeSearch">
                    <button type="submit" class="btn  search-btn">搜 索</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    参数列表
                </div>
                <div class="actions">
                    <a href="#modal-form-param" data-toggle="modal" class="btn blue add"><i class="icon-pencil"></i>添加</a>
                </div>
            </div>

            <div class="portlet-body" id="tableId">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>参数编号</th>
                        <th>参数类型</th>
                        <th>参数键名</th>
                        <th>参数值类型</th>
                        <th>描述</th>
                        <th>参数值</th>                       
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.filterId">
                            <td>$!basicVO.id</td>
                            <td>$!basicVO.paramType</td>
                            <td>$!basicVO.paramKey</td>
                            <td>$!basicVO.paramValueType</td>
                            <td>$!basicVO.desc</td>
                            <td>$!basicVO.missionParamValue</td>                            
                            <td>
                                <div class="btn-group">
                                    <a  href="#modal-form-param" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                        <i class="icon-edit"></i> 修改</a>
                                    <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini red del" style="margin-left: 3px;">
                                        <i class="icon-trash"></i> 删除
                                    </a>
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/param/index').addQueryData('paramTypeSearch',  "$!paramTypeSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
    </div>
</div>

<div id="modal-form-param" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 id="myModalLabel1">添加/修改</h3>
    </div>
    <div class="modal-body" style="text-align: left;">
        <form id="form" method="post" class="form-horizontal">
            <input name="uid" type="hidden" value=""/>
            参数类型：<input name="paramType" placeholder="参数类型" type="text"  class="m-wrap large" style="margin-bottom: 5px;"> <br/>
            参数键名：<input name="paramKey" placeholder="参数键名" type="text"  class="m-wrap large" style="margin-bottom: 5px;"> <br/>
            参数值类型：<input name="paramValueType" placeholder="参数值类型" type="text"  class="m-wrap large" style="margin-bottom: 5px;"> <br/>
            描述：<input name="desc" placeholder="描述" type="text" class="m-wrap large" style="margin-bottom: 5px;"> <br/>
            参数值：<textarea name="missionParamValue" class="m-wrap large" style="margin-bottom: 5px;"></textarea> <br/>
        </form>
    </div>
    <div class="modal-footer">
        <button class="btn" id="close-modal" data-dismiss="modal"
                aria-hidden="true">关闭</button>
        <button id="modal-form-submit" class="btn yellow submit">添加</button>
        <button id="modal-form-edit" class="btn yellow submit">修改</button>
    </div>
</div>

<div id="myModal3" class="modal hide fade" tabindex="-1"
     role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
     data-backdrop="static">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"
                aria-hidden="true"></button>
        <h3 id="myModalLabel3">警告!</h3>
    </div>
    <div class="modal-body">
        <p>
            你正在删除一条数据!<br>这个操作不可逆转,你确定要这样做吗?
        </p>
    </div>
    <div class="modal-footer">
        <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        <button id="affirm-del" data-dismiss="modal" class="btn red"
                data-uid="0">确定</button>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>

<script>
    seajs.use("$formLink/admin/static/app/param/index", function (main) {
        main.init();
    });

    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFilterDetailStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/mission/filter/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;
                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
    
</script>


