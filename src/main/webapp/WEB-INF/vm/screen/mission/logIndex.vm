<body>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">日志列表</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/mission/logIndex" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">编号：</span>
                    <input type="text" class="m-wrap small" name="missionIdSearch" id="missionIdSearch" value="$!missionIdSearch">
                    <span class="help-inline">操作人：</span>
                    <input type="text" class="m-wrap small" name="userNameSearch" id="userNameSearch" value="$!userNameSearch">
                    <span class="help-inline">操作时间：</span>
                    <input type="text" class="m-wrap small laydate-icon" name="operationStartTime" id="missionCreateStartTimeSearch" class="m-wrap small datetimepicker" value="$!operationStartTime">
                    <span class="help-inline">至</span>
                    <input type="text" class="m-wrap small laydate-icon" name="operationEndTime" id="missionCreateEndTimeSearch" class="m-wrap small datetimepicker" value="$!operationEndTime">
                    <span style="margin-left: 100px;">排序方式</span>
                    <select name="sortSearch" class="select_input" id="sort_input">
                        <option value=1
                            #if($!sortSearch==1)
                                selected="selected"
                            #end
                        >操作时间倒序
                        </option>
                        <option value=2
                            #if($!sortSearch==2)
                                selected="selected"
                            #end
                        >操作时间顺序
                        </option>

                    </select>
                    <input id="operation_type_input_hidden" type="hidden" name="operationTypes" value="$!operationTypes" class="hiddenInput" selectId="operation_type_select"></input>
                    <button type="submit" class="btn blue search-btn" id="search_button">查 询</button>
                </div>
            </form>

            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>
                        日志列表
                    </div>
                </div>

                <div class="portlet-body">
                    <table class="table table-condensed table-hover" style="table-layout: fixed" >
                        <colgroup>
                            <col style="width: 5%">
                            <col style="width: 14%">
                            <col style="width: 7%">
                            <col style="width: 63%">
                            <col style="width: 11%">
                        </colgroup>
                        <thead>
                        <tr>
                            <th>编号</th>
##                            操作类型
                            <th>
                                <select id="operation_type_select" class="SumoSelect" inputId="operation_type_input_hidden"  multiple="multiple" style="border: none;width: 80%;height: 10px">
                                        #foreach($operationType in $!totalOperationTypes)
                                            <option value="$!operationType.name" >$!operationType.desc</option>
                                        #end
                                </select>
                            </th>
                            <th>操作人</th>
                            <th>日志描述</th>
                            <th>操作时间</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id" data-uid="$!basicVO.id">
                                <td >$!basicVO.id</td>
                                <td >$!basicVO.operationType</td>
                                <td >$!basicVO.userName</td>
                                <td class="logDesc_td" data-uid="$!basicVO.id"
                                    style="overflow:hidden;text-overflow:ellipsis;word-break:keep-all;white-space:nowrap;">
##                                    $!basicVO.logDesc
                                </td>

                                <td >$dateUtils.format($!basicVO.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>

                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/mission/logIndex').addQueryData('sortSearch',"$!sortSearch").addQueryData('userNameSearch',"$!userNameSearch").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div >

    <div id="logDesc_div" >
    </div>
    <div id="logDesc_bg_div">

    </div>

    <div style="display: none">
        #foreach($log in $!basicVOList)
            <span  id="$!log.id" data_uid="$!log.id" class="logDesc_span_hidden" type="hidden">$!log.logDesc</span>
        #end
    </div>

    <input type="hidden" id="selectedBasicRegion"/>
</body>
<script type="text/javascript">
        seajs.use("$formLink/admin/static/app/mission/logIndex");

        /**
         *  勾选上次选择的选项
         */

        $(document).ready(function (){
            var inputs=$(".hiddenInput");//所有的隐藏输入框
            inputs.each(function (index,input) {
                var selectId=$(this).attr("selectId");//this==input
                var value=input.value;
                //遍历当前select的option，如果option的value在上次选择的value中，则勾选当前option
                $("#"+selectId+" option").each(function (optionIndex,option){
                    if(value.indexOf($(option).val())!=-1){
                        $(this).prop('selected','selected');
                    }
                });
            });
        })


</script>
