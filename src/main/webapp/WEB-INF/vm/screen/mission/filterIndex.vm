<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">过滤器管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/mission/filter/index" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">过滤器名：</span>
                    <input type="text" class="m-wrap small" name="filterNameSearch" id="filterNameSearch" value="$!filterNameSearch">
                    <span class="help-inline">任务编号：</span>
                    <input type="text" class="m-wrap small" name="missionIdSearch" id="missionIdSearch" value="$!missionIdSearch">
                    <button type="submit" class="btn  search-btn">搜 索</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    规则列表
                </div>
                <div class="actions">
                    <a  data-toggle="modal" class="btn blue add addForm"><i class="icon-pencil"></i>添加</a>
                </div>
            </div>

            <div class="portlet-body">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>过滤器编号</th>
                        <th>过滤器名称</th>
                        <th>关联任务</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.filterId">
                            <td>$!basicVO.filterId</td>
                            <td>$!basicVO.ruleName</td>
                            <td>$!basicVO.missionId</td>
                            <td>
                                <div class="btn-group">
                                    <a class="btn mini purple setForm" href="#" data-toggle="dropdown" data-uid="$!basicVO.filterId">
                                        <i class="icon-cog"></i> 详情 <i class="icon-angle-down"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/mission/filter/index').addQueryData('missionIdSearch',  "$!missionIdSearch").addQueryData('filterNameSearch',  "$!filterNameSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>

<script>
    seajs.use("$formLink/admin/static/app/mission/missionFilter", function (main) {
        main.init();
    });

    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFilterDetailStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/mission/filter/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;

                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
</script>


