<script>
    seajs.use("$formLink/admin/static/app/mission/channel", function (main) {
        main.init();
    });

    function closeIframe() {
        $("#YuFrame1").remove();
        $("#YuFrame1Bg").remove();
    }

    function loadFilterDetailStructure() {
        var formId = $("#selectedBasicRegion").val();
        var formObj;
        if(formId!=-1){
            $.ajax({
                type : "POST",
                dataType :"json",
                async: false,
                data : {
                    id: formId
                },
                url :  "/mission/filter/detail",
                success : function(result){
                    if (result.success) {
                        formObj= result.data;

                    }else{
                        alert(result.error);
                    }

                }
            });
        }
        return formObj;
    }
</script>


