<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">任务条件配置</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid" margin-bottom-20 content-area">
        <div class="span12 list-action-top-area">
            <form action="/mission/conditionIndex" class="form-horizontal listSearchBox" method="post">
                <div class="span12">
                    <span class="help-inline">条件名</span>
                    <input type="text" class="m-wrap small" name="conditionNameSearch" id="conditionNameSearch" value="$!conditionNameSearch">
                    <span class="help-inline">条件ID</span>
                    <input type="text" class="m-wrap small" name="conditionIdSearch" id="conditionIdSearch" value="$!conditionIdSearch">
                    <span class="help-inline">创建时间</span>
                    <input type="text" class="m-wrap small laydate-icon" name="createTimeBeginSearch" id="createTimeBeginSearch" value="$!createTimeBeginSearch" style="width: 160px">
                    <span class="help-inline">至</span>
                    <input type="text" class="m-wrap small laydate-icon" name="createTimeEndSearch" id="createTimeEndSearch" value="$!createTimeEndSearch" style="width: 160px">
                    <button type="submit" class="btn blue search-btn">查询</button>
                </div>
            </form>
        </div>
        <div class="portlet box green">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-cogs"></i>
                    渠道列表
                </div>
                <div class="actions">
                    <a href="#modal-form-condition" data-toggle="modal" class="btn blue add"><i class="icon-pencil"></i>添加</a>
                </div>
            </div>

            <div class="portlet-body" id="tableId">
                <table class="table table-condensed table-hover">
                    <thead>
                    <tr>
                        <th>条件ID</th>
                        <th>条件名</th>
                        <th>条件Key</th>
                        <th>创建时间</th>
                        <th>编辑者</th>
                        <th>状态</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #foreach($basicVO in $basicVOList)
                        <tr class="u_$!basicVO.id">
                            <td>$!basicVO.id</td>
                            <td>$!basicVO.desc</td>
                            <td>$!basicVO.paramKey</td>
                            <td>$dateUtils.format($!basicVO.gmtCreated,"yyyy-MM-dd HH:mm:ss")</td>
                            <td>$!basicVO.userName</td>
                            <td>
                                #if("$!basicVO.isValid"=="true")
                                    启用
                                #else
                                    禁用
                                #end
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a  href="#modal-form-condition" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                        <i class="icon-edit"></i> 修改</a>
                            #if("$!basicVO.isValid"=="true")
                                <a  data-toggle="modal" id="disableConditionId" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                    <i class="icon-edit"></i> 禁用</a>
                            #else
                                <a  data-toggle="modal" id="enableConditionId" data-uid="$!basicVO.id" class="btn mini purple edit" style="margin-left: 3px;">
                                    <i class="icon-edit"></i> 启用</a>
                            #end
                                    <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini red del" style="margin-left: 3px;">
                                        <i class="icon-trash"></i> 删除
                                    </a>
                                </div>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
            </div>
        </div>
        #if ($totalCount > 0)
            <div class="pages" style="padding:3px">
                #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/mission/conditionIndex').addQueryData("conditionNameSearch","$!conditionNameSearch").addQueryData("conditionIdSearch","$!conditionIdSearch").addQueryData('createTimeBeginSearch',  "$!createTimeBeginSearch").addQueryData('createTimeEndSearch',  "$!createTimeEndSearch").fork())
				   		#showPage($cpage $url)
            </div>
        #end
    </div>
</div>


<div id="modal-form-condition" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel1" aria-hidden="true">
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
        <h3 id="myModalLabel1">添加/修改</h3>
    </div>
    <div class="modal-body"  style="text-align: left;padding-bottom :60px">
