            <label id="conditionNameUl">条件名：<input name="conditionName" placeholder="条件名" type="text"  class="m-wrap large" style="margin-bottom: 5px;margin-left: 5px"> </label><br/>
            <label id="conditionKeyUl"> 条件key：<input name="conditionKey" placeholder="条件key" type="text"  class="m-wrap large" style="margin-bottom: 5px;"> </label> <br/>
        </form>
    </div>
    <div class="modal-footer" style="position: absolute;bottom: 0;width:670px;right: 0">
        <button class="btn" id="close-modal" data-dismiss="modal"
                aria-hidden="true">关闭</button>
        <button id="modal-form-submit" class="btn yellow submit">添加</button>
        <button id="modal-form-edit" class="btn yellow submit">修改</button>
    </div>
</div>



