<style type="text/css">
.u-tips {
	display: none;
	position: fixed;
	height: auto;
	z-index: 99999;
	left: 50%;
	top: 50%;
	width: 236px;
	margin-left: -118px;
	padding: 8px;
	line-height: 24px;
	border-radius: 4px;
	background-color: rgba(0, 0, 0, .6);
	text-align: center;
	font-size: 20px;
	color: #fff;
	font-size: 1.4rem;
}
</style> 
<div class="page-content"> 
	<div class="container-fluid">
			<div class="row-fluid">
				<div class="span12">
					<h3 class="page-title">答案管理</h3>
					<span>$!message</span>
				</div>
			</div>
			<div class="row-fluid" margin-bottom-20 content-area">
				<div class="portlet box green">
					<div class="portlet-title">
						<div class="caption">
							<i class="icon-cogs"></i>
							答案列表
						</div>

					</div>
	
					<div class="portlet-body">
						<table class="table table-condensed table-hover">
							<thead>
								<tr>
									<th>编号</th>
									<th>答题人ID</th>
									<th>答题人</th>
									<th>答题时间</th>
									<th>操作</th>
								</tr>
							</thead>
							<tbody>
								#foreach($basicVO in $basicVOList)
									<tr class="u_$!basicVO.id">
										<td>$!basicVO.id</td>
										<td>$!basicVO.customerId</td>
										<td>$!basicVO.customerName</td>
 										 <td>$dateUtils.format($!basicVO.answerTime,"yyyy-MM-dd HH:mm:ss")</td>
 										 <td>
											<div class="btn-group">
												<a href="#" data-toggle="modal" data-uid="$!basicVO.id" class="btn mini red showAnswerDetail" style="margin-left: 3px;">
													查看
												</a>
											</div>
										 </td>
									</tr>
                                	<tr class="answerDetail$!basicVO.id" style="display: none">
									</tr>
								#end
							</tbody>
						</table> 
					</div>
				</div>
				#if ($totalCount > 0)
				    <div class="pages" style="padding:3px">
				        #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/answer/index').addQueryData('searchTitle', "$!searchTitle").fork())
				   		#showPage($cpage $url)    
				    </div>
			    #end 
	
			</div>
		</div>

	    <input type="hidden"  id="selectedBasicRegion"/>
