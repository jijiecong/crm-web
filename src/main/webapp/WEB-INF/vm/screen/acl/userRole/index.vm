<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<style>
    .btn{
        border-radius: 6px !important;
    }
</style>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">用户角色管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="span12 list-action-top-area">
                <form action="/acl/userRole/index" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        #if(${inSide})
                            <span class="help-inline">商家名称：</span>
                            <input type="hidden" id="select-business" name="businessId" placeholder="商家名称"
                                   style="width: 240px" value=$!businessId>
                        #end
                        <span class="help-inline">用户昵称：</span>
                        <input type="text" class="m-wrap small" name="nickname" value="$!nickname">
                        <button type="submit" class="btn  search-btn">搜 索</button>
                        <a href="/acl/userRole/goTo/add" class="btn authorize" style="background-color:#E0E0E0;color: #1a1a1a;margin-left:30px;border-radius: 6px !important; "><i class="icon-pencil"></i> 授 权</a>
                    </div>
                </form>
            </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>用户帐号</th>
                            <th>用户昵称</th>
                            <th>角色</th>
                            <th>角色类别</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.userName</td>
                                <td>$!basicVO.nickname</td>
                                <td>$!basicVO.roleNames</td>
                                <td>$!basicVO.roleDescriptions</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/acl/userRole/goTo/modify?id=${basicVO.id}" data-userid="$!basicVO.id"
                                           class="btn mini purple authorize-edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i>编辑</a>
                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            #if ($totalCount > 0)
                <div class="pages" style="float: right">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				    #set($url = $formLink.setTarget('/acl/userRole/index').addQueryData(
                    'nickname', "$!nickname").addQueryData('userId', "$!userId").fork())
				   	#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

</div>

<input type="hidden" id="selectedBasicRegion"/>
<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>

<script>
    seajs.use(["$formLink/admin/static/app/acl/userRole/userRole"], function (main) {
        main.init();
    });
</script>

