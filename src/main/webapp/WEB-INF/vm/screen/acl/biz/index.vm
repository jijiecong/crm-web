<style type="text/css">
    .bigModal {
        width: 900px;
        margin-left: -450px;
    }
     .btn{
         border-radius: 6px !important;
     }
</style>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">应用管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="span12 list-action-top-area">
                <form action="/acl/biz/index" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        <span class="help-inline">应用名称：</span>
                        <input type="text" class="m-wrap small" name="bizName" id="bizName" value=$!bizName>
                        <button type="submit" class="btn  search-btn">搜 索</button>
                        <a href="/acl/biz/goTo/add" class="btn add" style="margin-left:30px"><i class="icon-pencil"></i>添加</a>
                        <a href="#batch-del-modal" data-toggle="modal" class="btn "><i
                                class="icon-pencil"></i>批量删除</a>
                    </div>
                </form>
            </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th><input type="checkbox" id="all-checkbox"></th>
                            <th>应用ID</th>
                            <th>应用名称</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td><input type="checkbox" class="list-checkbox" name="list-checkbox"
                                           value="$!basicVO.id"></td>
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.name</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#set-privilege-modal" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini red set-privilege" style="margin-left: 3px;">
                                            <i class="icon-cog"></i>设置应用权限</a>
                                        <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini yellow del" style="margin-left: 3px;">
                                            <i class="icon-trash"></i> 删除
                                        </a>
                                        <a href="/acl/biz/goTo/modify?id=${basicVO.id}" data-uid="$!basicVO.id"
                                           class="btn mini blue edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i> 修改</a>

                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/biz/index').addQueryData(
                    'bizName', "$!bizName").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <!--设置角色权限-->
    <div id="set-privilege-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel9" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3>设置角色权限</h3>
        </div>
        <div class="modal-body">
            <div id="select-privilege">

            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        </div>
    </div>

    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
            <h3>确认删除该应用？</h3>
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">删除
            </button>
        </div>
    </div>
    <!--删除选择的-->
    <div id="batch-del-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
                确认删除这些应用？
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="batch-del-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

