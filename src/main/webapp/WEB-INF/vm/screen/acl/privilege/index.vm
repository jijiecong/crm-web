<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<style>
    .btn{
        border-radius: 6px !important;
    }
</style>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>

<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">权限管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="span12 list-action-top-area">
                <form action="/acl/privilege/index" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        <span class="help-inline">权限名称或token：</span>
                        <input type="text" class="m-wrap small" name="nameOrToken" id="searchVal" value="$!nameOrToken">
                        <button type="submit" class="btn  search-btn">搜 索</button>
                        <a href="/acl/privilege/goTo/add" class="btn add" style="background-color:#E0E0E0;color:#1a1a1a;margin-left:20px;><i class="icon-pencil"></i>添加</a>
                    </div>
                </form>
            </div>
                <div class="portlet-body" >
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>编号</th>
                            <th>权限名称</th>
                            <th>权限说明</th>
                            <th>token</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.name</td>
                                <td>$!basicVO.description</td>
                                <td>$!basicVO.token</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#set-process-modal" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini yellow set-process" style="margin-left: 3px;">
                                            <i class="icon-cog"></i> 设置权限审核流程</a>
                                        <a href="#set-owner-modal" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini green set-owner" style="margin-left: 3px;">
                                            <i class="icon-cog"></i> 设置权限owner</a>
                                        <a href="/acl/privilege/goTo/modify?id=${basicVO.id}" data-uid="$!basicVO.id"
                                           class="btn mini purple edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i> 修改</a>
                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            #if ($totalCount > 0)
                <div class="pages" style="float: right">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/privilege/index').addQueryData(
                    'nameOrToken', "$!nameOrToken").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <!--权限owner-->
    <div id="set-owner-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel9" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3>设置权限owner</h3>
        </div>
        <div class="modal-body">
            <div id="select-owner">

            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
        </div>
    </div>

    <div id="set-process-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3>设置权限审核流程</h3>
        </div>
        <div class="modal-body">
            <div id="process-param">
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="process-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>
    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <p>
                你正在删除!<br>这个操作不可逆转,你确定要这样做吗?
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

    <!--创建表单-->
    <div id="modal-form-box" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="operation-name"></h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form id="form" method="post" class="form-horizontal">
                <table>
                    <tbody>
                    
                    <tr>
                        <td>权限名称：</td>
                        <td><input name="name" placeholder="权限名称" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    <tr>
                        <td>权限说明：</td>
                        <td><input name="description" placeholder="权限说明" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    <tr>
                        <td>token：</td>
                        <td><input name="token" placeholder="token" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;">
                        </td>
                    </tr>
                    <tr>
                        <td>选择风险等级：</td>
                        <td><select id="riskLevel" name="riskLevel" class="m-wrap large" style="margin-bottom: 5px;">
							  <option value ="1" selected="true">低风险</option>
							  <option value ="2">中风险</option>
							  <option value="3">高风险</option>
							</select></td>
                    </tr>
                    </tbody>
                </table>
                <p style="">* 命名规范:<br>
                    * 功能和菜单级别:meiren.acl.{appName}.{serviceName}.{funtionName}<br>
                    * 字段级别:meiren.acl.{appName}.{serviceName}.{funtionName}.{fieldName}</p>

            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal"
                    aria-hidden="true">关闭
            </button>
            <button id="modal-form-submit" class="btn green submit">确定</button>
        </div>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>
<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script src="${formLink}/admin/media/js/jquery.multi-select.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/privilege/privilege", "$formLink/admin/static/app/acl/ajaxSelect2", "$formLink/admin/static/app/acl/ajaxMultiSelect"], function (main, select2) {
        main.init();
    });
</script>
