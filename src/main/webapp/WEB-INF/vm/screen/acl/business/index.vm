<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<style type="text/css">
    .bigModal {
        width: 900px;
        margin-left: -450px;
    }
     .btn{
         border-radius: 6px !important;
     }

    .btns {
        border-radius: 6px !important;
        background-color: #1ab394;
        border-color: #1ab394;
        color: #fff;
        height:33px;
        width:65px;
        border:none;
    }
</style>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">商家管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="span12 list-action-top-area">
                <form action="/acl/business/index" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        <span class="help-inline">商家名称：</span>
                        <input type="text" class="m-wrap small" name="businessName" id="businessName">
                        <button type="submit" class="search-btn btns">搜 索</button>
                        <a href="/acl/business/goTo/add" class="btn add" style="margin-left:30px"><i class="icon-pencil"></i>添加</a>
##                        <a href="#batch-del-modal" data-toggle="modal" class="btn "><i
##                                class="icon-pencil"></i>批量删除</a>
                    </div>
                </form>
            </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
##                            <th><input type="checkbox" id="all-checkbox"></th>
                            <th>商家ID</th>
                            <th>商家名称</th>
                            <th>商家描述</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.name</td>
                                <td>$!basicVO.description</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/acl/business/goTo/setPrivilege?id=${basicVO.id}" data-uid="$!basicVO.id"
                                           class="btn mini yellow set-privilege" style="margin-left: 3px;">
                                            <i class="icon-cog"></i>设置权限</a>
                                        <a href="/acl/business/setRole/add?businessId=$!basicVO.id&name=$!basicVO.name"  data-uid="$!basicVO.id" class="btn mini red" style="margin-left: 3px;">
                                            <i class="icon-cog"></i> 导入权限</a>
                                        <a href="/acl/business/goTo/modify?id=${basicVO.id}" data-uid="$!basicVO.id"
                                           class="btn mini blue edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i> 修改</a>
                                        <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini red del" style="margin-left: 3px;">
                                            <i class="icon-trash"></i> 删除</a>
                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/business/index').addQueryData(
                    'businessName', "$!businessName").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
            <h3>确认删除该应用？</h3>
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">删除
            </button>
        </div>
    </div>
    <!--删除选择的-->
    <div id="batch-del-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
                确认删除这些应用？
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="batch-del-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

</div>

<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script src="${formLink}/admin/media/js/jquery.multi-select.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/business/business"], function (main) {
        main.init();
    });
</script>
