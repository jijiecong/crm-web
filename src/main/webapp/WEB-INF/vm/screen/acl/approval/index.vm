<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">

<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">审核管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        待审核列表
                    </div>
                    <div class="actions">
                        <a href="#modal-set-agent" data-toggle="modal" class="btn blue set-agent"
                           data-agentid="$!agentId">
                            <i class="icon-pencil"></i>
                            设置代签
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>编号</th>
                            <th>审核人</th>
                            <th>申请人</th>
                            <th>申请描述</th>
                            <th>被申请权限/角色</th>
                            <th>审核级别</th>
                            <th>审核结果</th>
                            <th>申请时间</th>
                            <th>审核时间</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.approverName</td>
                                <td>$!basicVO.userName</td>
                                <td>$!basicVO.applyContent</td>
                                <td>$!basicVO.wantName</td>
                                <td>$!basicVO.approvalLevel</td>
                                <td>$!basicVO.approvalResultName</td>
                                <td>$dateUtils.format($!basicVO.applyTime,"yyyy-MM-dd HH:mm:ss")</td>
                                <td>$dateUtils.format($!basicVO.approvalTime,"yyyy-MM-dd HH:mm:ss")</td>
                                <td>
                                    <div class="btn-group">
                                        #if($!basicVO.approvalResult =='NONE')
                                            <a href="#modal-pass" data-toggle="modal" data-uid="$!basicVO.id"
                                               class="btn mini purple set-pass" style="margin-left: 3px;">
                                                <i class="icon-edit"></i> 审核通过</a>
                                            <a href="#modal-no-pass" data-toggle="modal" data-uid="$!basicVO.id"
                                               class="btn mini purple set-no-pass" style="margin-left: 3px;">
                                                <i class="icon-edit"></i> 审核不通过</a>
                                        #end
                                        #if($!basicVO.approvalMode =='NORMAL' && $!basicVO.approvalResult =='NONE')
                                            <a href="#modal-change" data-toggle="modal" data-uid="$!basicVO.id"
                                               class="btn mini purple set-change" style="margin-left: 3px;">
                                                <i class="icon-edit"></i> 转签</a>
                                            <a href="#modal-add" data-toggle="modal" data-uid="$!basicVO.id"
                                               class="btn mini purple set-add" style="margin-left: 3px;">
                                                <i class="icon-edit"></i> 加签</a>
                                        #end
                                    </div>

                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="float:right">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/approval/index').addQueryData(
                    'approverId', "$!approverId").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <div id="modal-set-agent" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="">设置代签人</h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form id="agent-form" method="post" class="form-horizontal">
                <table>
                    <tbody>
                    <tr>
                        <td>选择代签人：</td>
                        <td><input id="agent-user" name="toUserId" placeholder="" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>是否启用：</td>
                        <td><select name="isUsed" type="text" class="m-wrap large">
                            <option value="1" selected>启用</option>
                            <option value="2">不启用</option>
                        </select></td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="modal-agent-submit" class=" btn yellow submit">确定</button>
        </div>
    </div>

    <div id="modal-change" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="">设置转签人</h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form method="post" class="form-horizontal">
                选择转签人：<input id="change-user" placeholder="" type="text" class="m-wrap large"
                             style="margin-bottom: 5px;">
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="modal-change-submit" class=" btn yellow submit">确定</button>
        </div>
    </div>

    <div id="modal-add" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="">设置加签人</h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form method="post" class="form-horizontal">
                选择加签人：<input id="add-user" placeholder="" type="text" class="m-wrap large" style="margin-bottom: 5px;">
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="modal-add-submit" class=" btn yellow submit">确定</button>
        </div>
    </div>
</div>

<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script src="${formLink}/admin/media/js/jquery.multi-select.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/approval/approval", "$formLink/admin/static/app/acl/ajaxSelect2"], function (main, select2) {
        main.init();
    });
</script>
