<link href="$formLink/admin/media/css/bosco/list.css"
      rel="stylesheet" type="text/css">
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">用户管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="span12 list-action-top-area">
                <form action="/acl/user/indexByGroup" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        <span class="help-inline">选择部门：</span>
                        <input type="text" class="m-wrap small" name="groupId" id="searchGroupId" value="$!groupId">
                        <button type="submit" class="btn  search-btn">搜 索</button>
                    </div>
                </form>
            </div>
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-cogs"></i>
                        各部门用户列表
                    </div>
                </div>

                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>部门名称</th>
                            <th>用户名</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.groupName</td>
                                <td>$!basicVO.userName</td>
                                <td>
                                    <div class="btn-group">

                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/user/indexByGroup').addQueryData(
                    'groupId', "$!groupId").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>
<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/group/userByGroup", "$formLink/admin/static/app/acl/ajaxSelect2"], function (main) {
        main.init();
    });
</script>
