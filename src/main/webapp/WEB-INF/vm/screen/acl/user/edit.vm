<style>
    .btn {
        border-radius: 6px !important;
        background-color: #1ab394;
        border-color: #1ab394;
        color: #fff;
    }
</style>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>

<!--创建表单-->
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">$title</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <form id="form" class="form-horizontal">
                <div class="control-group">
                    <label class="control-label" for="userName">用户帐号：</label>
                    <div class="controls">
                        <input type="text" id="userName" name="userName" placeholder="用户帐号"
                               style="width: 480px !important;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="nickname">用户昵称：</label>
                    <div class="controls">
                        <input type="text" id="nickname" name="nickname" placeholder="用户昵称"
                               style="width: 480px !important;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="password">密码：</label>
                    <div class="controls">
                        <input type="text" id="password" name="password" placeholder="密码"
                               style="width: 480px !important;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="mobile">手机：</label>
                    <div class="controls">
                        <input type="text" id="mobile" name="mobile" placeholder="手机" style="width: 480px !important;">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="email">邮箱：</label>
                    <div class="controls">
                        <input type="text" id="email" name="email" placeholder="邮箱" style="width: 480px !important;">
                    </div>
                </div>
                #if($!isInside && $!add =="add")
                    <div class="control-group">
                        <label class="control-label" for="businessId">所属商家：</label>
                        <div class="controls">
                            <input type="text" id="select-business" name="businessId" placeholder="所属商家"
                                   style="width: 480px !important;">
                        </div>
                    </div>
                #else
                    <input type="hidden" id="businessId" name="businessId" disabled="disabled"
                           value="$aclBusinessEntity.getId()" style="width: 480px !important;">
                #end

                <div class="control-group">
                    <div class="controls">
                        <button type="button" class="btn" id="close-form">返回</button>
                        <button type="button" class="btn green submit" id="form-submit" data-uid="$id">确定</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>
<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script src="${formLink}/admin/media/js/jquery.multi-select.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/user/edit"], function (main) {
        main.init();
    });
</script>