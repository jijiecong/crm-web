<link href="$formLink/admin/media/css/bosco/list.css"
      rel="stylesheet" type="text/css">
<style>
    .btn{
        border-radius: 6px !important;
    }
</style>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">基础审核流程管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
         <div class="span12 list-action-top-area">
                <form action="/acl/process/index" class="form-horizontal listSearchBox" method="post">
                    <div class="span12">
                        <span class="help-inline">流程名称：</span>
                        <input type="text" class="m-wrap small" name="processName" id="processName" value=$!processName>
                        <button type="submit" class="btn  search-btn">搜 索</button>
                        <a href="/acl/process/goTo/add" class="btn add" style="margin-left:30px"><i class="icon-pencil"></i>添加</a>
                        <a href="#set-process-modal" data-toggle="modal" class="btn green set-lowprocess" data-level="1" style="margin-left: 30px;">
                                            <i class="icon-pencil"></i>低风险模板</a>
                        <a href="#set-process-modal" data-toggle="modal" class="btn yellow set-middleprocess" data-level="2" style="margin-left: 30px;">
                                            <i class="icon-pencil"></i>中风险模板</a>
                        <a href="#set-process-modal" data-toggle="modal" class="btn red set-highprocess" data-level="3" style="margin-left: 30px;">
                                            <i class="icon-pencil"></i>高风险模板</a>
                                            
                    </div>
                </form>
            </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th>编号</th>
                            <th>流程名称</th>
                            <th>流程说明</th>
                            <th>流程级别</th>
                            <th>最高等级</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.name</td>
                                <td>$!basicVO.processDescribe</td>
                                <td>$!basicVO.approvalLevel</td>
                                <td>$!basicVO.hierarchyName</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini yellow del" style="margin-left: 3px;">
                                            <i class="icon-trash"></i> 删除
                                        </a>
                                        <a href="/acl/process/goTo/modify?id=${basicVO.id}" data-uid="$!basicVO.id"
                                           class="btn mini blue edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i> 修改</a>

                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            #if ($totalCount > 0)
                <div class="pages" style="float: right">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/acl/process/index').addQueryData(
                    'processName', "$!processName").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
               你确定要删除这个流程?
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

    <!--创建表单-->
    <div id="modal-form-box" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="operation-name"></h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form id="form" method="post" class="form-horizontal">
                <table style="width: auto">
                    <tbody>
                    <tr>
                        <td>流程名称：</td>
                        <td><input name="name" placeholder="流程名称" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    <tr>
                        <td>流程说明：</td>
                        <td><input name="processDescribe" placeholder="流程说明" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    <tr>
                        <td>流程级别：</td>
                        <td><input name="approvalLevel" placeholder="流程级别" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    <tr>
                        <td>最高级别：</td>
                        <td><input id="hierarchyId" name="hierarchyId" placeholder="最高级别" type="text" class="m-wrap large"
                                   style="margin-bottom: 5px;"></td>
                    </tr>
                    </tbody>
                </table>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal"
                    aria-hidden="true">关闭
            </button>
            <button id="modal-form-submit" class="btn green submit">确定</button>
        </div>
    </div>
    <!-- 设置默认流程 -->
    <div id="set-process-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 class="operation2-name"></h3>
        </div>
        <div class="modal-body">
            <div id="process-param">
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="process-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>

<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script src="${formLink}/admin/media/js/jquery.multi-select.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/acl/process/process", "$formLink/admin/static/app/acl/ajaxSelect2", "$formLink/admin/static/app/acl/ajaxMultiSelect"], function (main, select2) {
        main.init();
    });
</script>
