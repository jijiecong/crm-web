<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<style>
    .m-wrap.small {
        width: 150px !important;
    }
</style>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">消息管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="actions" style="float:left">
##                        <a href="#modal-form-box" data-toggle="modal" class="btn blue add"><i class="icon-pencil"></i>添加</a>
                    ##                        <a href="#batch-del-modal" data-toggle="modal" class="btn blue"><i class="icon-pencil"></i>删除</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th><input type="checkbox" id="all-checkbox"></th>
                            <th>编号</th>
                            <th>用户id</th>
                            <th>内容</th>
                            <th>状态</th>
                            <th>发送类型</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td><input type="checkbox" class="list-checkbox" value="$!basicVO.id"></td>
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.userId</td>
                                <td>$!basicVO.content</td>
                                <td>$!basicVO.statusName</td>
                                <td>$!basicVO.notifyTypeName</td>
##                                <td>
##                                    <div class="btn-group">
##                                        <a href="#modal-form-box" data-toggle="modal" data-uid="$!basicVO.id"
##                                           class="btn mini purple edit" style="margin-left: 3px;">
##                                            <i class="icon-edit"></i> 修改</a>
##                                        <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id"
##                                           class="btn mini red del" style="margin-left: 3px;">
##                                            <i class="icon-trash"></i> 删除
##                                        </a>
##                                    </div>
##                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/notify/index').addQueryData(
                    'userId', "$!userId").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>


    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
            <h3>确认删除该配置？</h3>
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">删除
            </button>
        </div>
    </div>
    <!--删除选择的-->
    <div id="batch-del-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
                确认删除这些配置？
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="batch-del-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

    <!--创建表单-->
    <div id="modal-form-box" class="modal hide fade" style="top:10%;width: 900px;margin-left:-450px"
         tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="operation-name"></h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form id="form" method="post" class="form-horizontal">
                <table>
                    <tbody>
                    <tr>
                        <td>名称：</td>
                        <td><input name="name" placeholder="名称" type="text" class="m-wrap large"></td>
                        <td rowspan="9">
                            <p style="margin-left: 20px">
                                *参数详解
                                <br>dubbo:
                                <br>路由:com.meiren.acl.service.AclPrivilegeService
                                <br>方法:getAllPrivilegeByUser
                                <br>参数:按接口参数顺序填写参数类型(name)和值(value)
                                <br>当传入的类型为一个实体类或者map,list的时候,对应值请填写对应数据的json
                                <br>如:name(meiren.acl.userEntity),value({"name":"223232","id":1})
                                <br>
                                <br>http:
                                <br>路由:user/index
                                <br>方法:get
                                <br>参数:按请求参数填写参数名称(name)和值(value)
                                <br>
                                <br>通知触发值配置:为当前配置接口错误次数
                            </p>
                        </td>
                    </tr>
                    <tr>
                        <td>类型：</td>
                        <td><select name="type" placeholder="类型" type="text" class="m-wrap large">
                            <option value="1">http</option>
                            <option value="2">dubbo</option>
                        </select></td>
                    </tr>
                    <tr>
                        <input name="timeType" type="hidden" class="m-wrap large" value="1">
                        <td>间隔时间：</td>
                        <td><select name="timeValue" placeholder="类型" type="text" class="m-wrap large">
                            <option value="30">30秒</option>
                            <option value="60">60秒</option>
                            <option value="300">5分钟</option>
                        </select></td>
                    </tr>
                    <tr>
                        <td>ip或域名：</td>
                        <td><input name="domain" placeholder="ip或域名" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>路由：</td>
                        <td><input name="router" placeholder="路由" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>方法：</td>
                        <td><input name="method" placeholder="方法" type="text" class="m-wrap large"></td>
                    </tr>

                    <tr>
                        <td>参数1：</td>
                        <td><input name="paramtype[]" placeholder="name" type="text" class="m-wrap small paramtype">
                            <input name="paramvalue[]" placeholder="value" type="text"
                                   class="m-wrap small paramvalue"></td>
                    </tr>
                    <tr>
                        <td>参数2：</td>
                        <td><input name="paramtype[]" placeholder="name" type="text" class="m-wrap small paramtype">
                            <input name="paramvalue[]" placeholder="value" type="text"
                                   class="m-wrap small paramvalue"></td>
                    </tr>
                    <tr>
                        <td>参数3：</td>
                        <td><input name="paramtype[]" placeholder="name" type="text" class="m-wrap small paramtype">
                            <input name="paramvalue[]" placeholder="value" type="text"
                                   class="m-wrap small paramvalue"></td>
                    </tr>
                    <tr>
                        <td>通知触发类型：</td>
                        <td>
                            <select name="triggerType">
                                <option value="1">出错</option>
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>通知触发值：</td>
                        <td><input name="triggerValue" placeholder="" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>通知人：</td>
                        <td><input id="userIds" name="userIds" type="text"
                                   class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>是否启用：</td>
                        <td>
                            <select name="isUsed">
                                <option value="1">是</option>
                                <option value="0">否</option>
                            </select>
                        </td>
                    </tr>
                    </tbody>
                </table>

            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal"
                    aria-hidden="true">关闭
            </button>
            <button id="modal-form-submit" class="btn green submit">确定</button>
        </div>
    </div>
</div>

<script src="${formLink}/admin/media/js/select2.min.js" type="text/javascript"></script>
<script>
    seajs.use(["$formLink/admin/static/app/notify/index"], function (main) {
        main.init();
    });
</script>
