<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">通知模板管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="portlet box green">
                <div class="portlet-title">
                    <div class="actions" style="float:left">
                        <a href="#modal-form-box" data-toggle="modal" class="btn blue add"><i class="icon-pencil"></i>添加</a>
##                        <a href="#batch-del-modal" data-toggle="modal" class="btn blue"><i class="icon-pencil"></i>删除</a>
                    </div>
                </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th><input type="checkbox" id="all-checkbox"></th>
                            <th>编号</th>
                            <th>名称</th>
                            <th>token</th>
                            <th>内容</th>
                            <th>通知模式</th>
                            <th>操作</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td><input type="checkbox" class="list-checkbox" value="$!basicVO.id"></td>
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.name</td>
                                <td>$!basicVO.token</td>
                                <td>$!basicVO.content</td>
                                <td>$!basicVO.model</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="#modal-form-box" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini purple edit" style="margin-left: 3px;">
                                            <i class="icon-edit"></i> 修改</a>
                                        <a href="#myModal3" data-toggle="modal" data-uid="$!basicVO.id"
                                           class="btn mini red del" style="margin-left: 3px;">
                                            <i class="icon-trash"></i> 删除
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/monitor/notifyTemplate/index').addQueryData(
                    'userId', "$!userId").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>


    <!--删除-->
    <div id="myModal3" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
            <h3>确认删除该模板？</h3>
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="affirm-del" data-dismiss="modal" class="btn red"
                    data-uid="0">删除
            </button>
        </div>
    </div>
    <!--删除选择的-->
    <div id="batch-del-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">警告!</h3>
        </div>
        <div class="modal-body">
            <p>
                确认删除这些模板？
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
            <button id="batch-del-submit" data-dismiss="modal" class="btn red"
                    data-uid="0">确定
            </button>
        </div>
    </div>

    <!--创建表单-->
    <div id="modal-form-box" class="modal hide fade" style="top:10%" tabindex="-1" role="dialog"
         aria-labelledby="myModalLabel1"
         aria-hidden="true">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            <h3 class="operation-name"></h3>
        </div>
        <div class="modal-body" style="text-align: left;">
            <form id="form" method="post" class="form-horizontal">
                <table>
                    <tbody>
                    <tr>
                        <td>名称：</td>
                        <td><input name="name" placeholder="名称" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>token：</td>
                        <td><input name="token" placeholder="token" type="text" class="m-wrap large"></td>
                    </tr>
                    <tr>
                        <td>通知模式：</td>
                        <td><select name="model" type="text" class="m-wrap large">
                            <option value="1">短信</option>
                            <option value="2">邮件</option>
                        </select></td>
                    </tr>
                    <tr>
                        <td>内容：</td>
                        <td><textarea name="content" rows="2" class="m-wrap large"></textarea></td>
                    </tr>
                    <tr>
                        <td></td>
                        <td><p>
                            *参数添加如:$1,为第一个传入参数,$2为第二个传入参数
                        </p></td>
                    </tr>
                    </tbody>
                </table>

            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" id="close-modal" data-dismiss="modal"
                    aria-hidden="true">关闭
            </button>
            <button id="modal-form-submit" class="btn green submit">确定</button>
        </div>
    </div>
</div>

<input type="hidden" id="selectedBasicRegion"/>
<script>
    seajs.use(["$formLink/admin/static/app/monitor/notifyTemplate"], function (main) {
        main.init();
    });
</script>
