<link href="$formLink/admin/media/css/bosco/list.css" rel="stylesheet" type="text/css">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<script src="http://g.tbcdn.cn/kissy/k/1.3.1/seed.js" data-config="{combine:true}"></script>
<div class="page-content">
    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span12">
                <h3 class="page-title">监控结果管理</h3>
                <span>$!message</span>
            </div>
        </div>
        <div class="row-fluid margin-bottom-20 content-area">
            <div class="portlet box green">
                <div class="portlet-title" style="height:25px">

                </div>
                <div class="portlet-body">
                    <table class="table table-condensed table-hover">
                        <thead>
                        <tr>
                            <th><input type="checkbox" id="all-checkbox"></th>
                            <th>编号</th>
                            <th>配置编号</th>
                            <th>状态码</th>
                            <th>域名</th>
                            <th>内容</th>
                            <th>时间</th>
                        </tr>
                        </thead>
                        <tbody>
                            #foreach($basicVO in $basicVOList)
                            <tr class="u_$!basicVO.id">
                                <td><input type="checkbox" class="list-checkbox" value="$!basicVO.id"></td>
                                <td>$!basicVO.id</td>
                                <td>$!basicVO.configId</td>
                                <td>$!basicVO.status</td>
                                <td>$!basicVO.domain</td>
                                <td><a href="#batch-content-modal" data-toggle="modal" class="btn blue content"
                                       data-uid="$!basicVO.id">详细</a></td>
                                <td>$dateUtils.format($!basicVO.resultTime,"yyyy-MM-dd HH:mm:ss")</td>
                            </tr>
                            #end
                        </tbody>
                    </table>
                </div>
            </div>
            #if ($totalCount > 0)
                <div class="pages" style="padding:3px">
                    #set($cpage = $pageUtil.pager($curPage, $pageSize, $totalCount))
				        #set($url = $formLink.setTarget('/monitor/result/index').addQueryData(
                    'id', "$!id").fork())
				   		#showPage($cpage $url)
                </div>
            #end
        </div>
    </div>

    <!--详细-->
    <div id="batch-content-modal" class="modal hide fade" tabindex="-1" style="top:10%"
         role="dialog" aria-labelledby="myModalLabel3" aria-hidden="true"
         data-backdrop="static">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"
                    aria-hidden="true"></button>
            <h3 id="myModalLabel3">内容</h3>
        </div>
        <div class="modal-body">
            <p id="contents">
            </p>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">取消</button>
        </div>
    </div>

    <input type="hidden" id="selectedBasicRegion"/>
    <script>
        seajs.use(["$formLink/admin/static/app/monitor/result"], function (main) {
            main.init();
        });
    </script>
